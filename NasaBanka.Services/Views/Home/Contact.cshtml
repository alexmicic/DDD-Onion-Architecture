    ViewBag.Title = "Kontakt";
}

<div class="page">
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="map embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2902.7553803562187!2d21.894139315843333!3d43.31937997913417!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4755b0b14f921bab%3A0xdc7bcef70ce7a5f0!2sNis!5e0!3m2!1sen!2srs!4v1450899031097" width="1130" height="280" frameborder="0" style="border:0" allowfullscreen></iframe>
